<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>server</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>sentinel</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.FONT_AWESOME</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.FACELETS_LIBRARIES</param-name>
        <param-value>/WEB-INF/primefaces-sentinel.taglib.xml</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.xhtml</welcome-file>
    </welcome-file-list>
    
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.controler.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/About/*</url-pattern>
        <url-pattern>/Accounting/*</url-pattern>
        <url-pattern>/IPM/*</url-pattern> 
        <url-pattern>/Messages/*</url-pattern>
        <url-pattern>/News/*</url-pattern>
        <url-pattern>/Operations/*</url-pattern>
        <url-pattern>/Profile/*</url-pattern>
        <url-pattern>/Statis/*</url-pattern>
        <url-pattern>/Structure/*</url-pattern>
        <url-pattern>/Tasks/*</url-pattern>
        <url-pattern>/Tutorial/*</url-pattern>
        <url-pattern>/Template/*</url-pattern>
        <url-pattern>/dashboard.xhtml</url-pattern>

    </filter-mapping>
    
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/login.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/Error/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/Error/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/Error/access-denied.xhtml</location>
    </error-page>

    
    
   
    
</web-app>
